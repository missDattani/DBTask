@{
    ViewData["Title"] = "Add OTP";
    Layout = null;
}
@model EmployeeDataWeb.Model.ViewModels.User.OTPModel
@{
    Layout = null;
}
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>

<div class="container">
    <h2>AddOTP</h2>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddOTP">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="OTP" class="control-label"></label>
                <input asp-for="OTP" class="form-control" />
                <span asp-validation-for="OTP" class="text-danger"></span>
                @if(TempData["Error"] != null)
                {
                    <h6 class="text-danger">@TempData["Error"]</h6>
                }
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
</div>



