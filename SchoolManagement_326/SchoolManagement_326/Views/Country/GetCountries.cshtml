@model List<SchoolMgmt_326.Model.Context.Country>
@{
    ViewBag.Title = "GetCountries";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<link href="~/Content/common/Style1.css" rel="stylesheet" />
<div class="content-wrapper">
    @if(TempData["Error"] != null)
            {
                <div class="alert alert-danger" role="alert"> 
                    @TempData["Error"]
                </div>
            }
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Country Details</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Countries</a></li>
                        <li class="breadcrumb-item active">Country Details</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12 m-t-25">
                    
                    <div class=" table-responsive">
                        <table class="table table-borderless table-striped table-earning" id="CoTable">
                            <thead>
                                <tr>
                                    <th>
                                        Country Name
                                    </th>

                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @item.CountryName
                                        </td>
                                        <td>
                                            @Html.ActionLink("Edit", "UpdateCountry", new { CoId = item.CoId }) |
                                            @Html.ActionLink("Details", "GetCountryDetails", new { CoId = item.CoId }) |
                                            @Html.ActionLink("Delete", "DeleteCountry", new { CoId = item.CoId })
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
<script>
    let table = new DataTable('#CoTable');
</script>




