@model IEnumerable<SchoolMgmt_326.Model.Context.State>

@{
    ViewBag.Title = "GetStates";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}


<link href="~/Content/common/Style1.css" rel="stylesheet" />
<div class="content-wrapper">
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @TempData["Error"]
        </div>
    }
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">State Details</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Ctates</a></li>
                        <li class="breadcrumb-item active">State Details</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12 m-t-25">

                    <div class=" table-responsive">
                        <table class="table table-borderless table-striped table-earning" id="StTable">
                            <thead>
                                <tr>
                                    <th>
                                        State Name
                                    </th>
                                    <th>
                                        CountryID
                                    </th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @item.StateName
                                        </td>
                                        <td>
                                            @item.CoId
                                        </td>
                                        <td>
                                            @Html.ActionLink("Edit", "UpdateState", new { StId = item.StId }) |
                                            @Html.ActionLink("Details", "GetStateDetails", new { StId = item.StId }) |
                                            @Html.ActionLink("Delete", "DeleteState", new { StId = item.StId })
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
<script>
    let table = new DataTable('#StTable');
</script>








