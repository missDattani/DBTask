@model IEnumerable<SchoolManagement_SIT326.Models.Models.CountryModel>
@{
    ViewBag.Title = "GetCountries";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>GetCountries</h2>
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
<p>
    @Html.ActionLink("Create New","AddCountry")
</p>
<table class="table">
    <tr>
        <th>CountryName</th>
        <th>Action</th>
    </tr>
    @foreach (var item in Model)
    {
<tr>
    <td>@item.CountryName</td>
    <td>
        <a href="/Country/AddCountry?CoId=@item.CountryId" class="btn btn-success">Edit</a> |
        <a href="/Country/GetCountryById?CoId=@item.CountryId" class="btn btn-info">Details</a> |
        <a href="/Country/DeleteCountry?CoId=@item.CountryId" class="btn btn-danger">Delete</a>
    </td>
</tr>
    }

</table>

