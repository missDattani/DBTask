@model SchoolManagement_SIT326.Models.Models.UserModel
@{
    ViewBag.Title = "GetUserById";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    table{
        margin-top:50px;
    }
</style>
@if (TempData["User"] != null)
{
    <div class="alert alert-danger">@TempData["User"]</div>
}

    <table class="table">
        <tr>
            <th>FirstName</th>
            <th>LastName</th>
            <th>Email</th>
            <th>RoleName</th>
        </tr>
        <tr>
            <td>@Model.FirstName</td>
            <td>@Model.LastName</td>
            <td>@Model.Email</td>
            <td>@Model.RoleName</td>
        </tr>
    </table>

    <div>
        @Html.ActionLink("Back to List", "GetUsers")
    </div>
