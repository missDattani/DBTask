            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
      
        <td>
          @if(item.Role == 1)
          {
            <span>Super Admin</span>
          }
