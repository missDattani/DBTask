@model List<SchoolMgmtWEB_326.Models.Models.UserModel>

@{
    ViewBag.Title = "GetUsers";
    Layout = "~/Views/Shared/LayoutMain.cshtml";
}
<style>
    th, td {
        color: white;
    }
</style>
<h2>GetUsers</h2>
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
<p>
    <a href="/User/SignUp" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <tr>
        <th>
            FirstName
        </th>
        <th>
            LastName
        </th>
        <th>
            Email
        </th>

        <th>
            RoleName
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RoleName)
            </td>
            <td>
                <a href="/User/SignUp?Id=@item.Id" class="btn btn-success">Edit</a> |
                <a href="/User/GetUserDetail?Id=@item.Id" class="btn btn-info">Details</a> |
                <a href="/User/DeleteUser?Id=@item.Id" class="btn btn-danger">Delete</a>
            </td>
        </tr>
    }

</table>
