@model SchoolMgmt_System.Model.ViewModels.ForgotData
@{
	ViewData["Title"] = "ForgotPassword";
	
}
@if(ViewBag.Error != null)
{
	<div class="alert alert-danger">@ViewBag.Error</div>
}
<div class="container">

	<!-- Outer Row -->
	<div class="row justify-content-center">

		<div class="col-xl-10 col-lg-12 col-md-9">

			<div class="card o-hidden border-0 shadow-lg my-5">
				<div class="card-body p-0">
					<!-- Nested Row within Card Body -->
					<div class="row">
						<div class="col-lg-2"></div>
						<div class="col-lg-8">
							<div class="p-5">
								<div class="text-center">
									<h1 class="h4 text-gray-900 mb-2">Forgot Your Password?</h1>
									<p class="mb-4">
										We get it, stuff happens. Just enter your email address below
										and we'll send you a link to reset your password!
									</p>
								</div>

								@using (Html.BeginForm("ForgotPassword", "User", FormMethod.Post, new { @class = "user" }))
								{
									<div class="form-group">
										@Html.TextBoxFor( x => x.Email , new {@class = "form-control form-control-user" , @placeholder="Enter Email Address..."})

									</div>
									<button type="submit" class="btn btn-primary btn-user btn-block">
										Get Password
									</button>
								}
								<hr>
								<div class="text-center">
									<a class="small" href="/Login/RegisterUser">Create an Account!</a>
								</div>
								<div class="text-center">
									<a class="small" href="/Login/Login">Already have an account? Login!</a>
								</div>
							</div>
						</div>
						<div class="col-lg-2"></div>
					</div>
				</div>
			</div>

		</div>

	</div>

</div>
