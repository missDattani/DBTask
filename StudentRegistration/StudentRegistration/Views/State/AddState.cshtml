@model StudentRegistration.Models.StateModel

@{
    ViewBag.Title = "AddState";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link type="text/css" rel="stylesheet" href="~/Content/Theme/css/Style1.css" />
</head>

<body>
    <div class="main">
        <form action="/State/AddState" method="post">
            <h1><lable>ADD State</lable> </h1>
            <div class="inset">
                <p>
                    <label for="State">STATE NAME</label>
                    @Html.EditorFor(model => model.StateName, new { htmlAttributes = new { @class = "from-control", @placeholder = "Enter State Name" } })
                    @Html.ValidationMessageFor(model => model.StateName, "")
                </p>
                <p>
                    <label for="Country">COUNTRY</label>
                    @if (ViewBag.CountryList != null)
                    {
                        @Html.DropDownListFor(m => m.CountryId, ViewBag.CountryList as SelectList, "--Select Country--", new { @class = "form-control" })
                        @Html.ValidationMessageFor(modal => modal.CountryId, "", new { @class = "text-danger" })
                    }
                </p>
            </div>

            <p class="p-container">
                <input type="submit" class="form-submit" value="Submit" />
            </p>
        </form>
        <br /><br />
        @Html.ActionLink("Back To List", "StateIndex", "State")
    </div>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Content/Theme/js/mainform.js"></script>
</body>
</html>




